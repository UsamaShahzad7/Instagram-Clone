<div class="main">
    <div class="container">
        <h1>Create New Profile</h1>
            <div id="createProfile">
                <%=form_with model: @profile do |form| %>
                <%=form.label :user_name%>
                <%=form.text_field :user_name%>
                <%=form.label :profile_picture%>
                <%=form.file_field :profile_picture%>
                <%=form.submit%>
                 <%end%>
            </div>
    </div>
</div>
<style>
    .main{
    margin-top: 40px;
    }
    #createProfile
    {
        z-index: 1;
        display: block;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        background-color: #91C8E4;
        height: 300px;
        width: max-content;
    }
</style>
